@using hair.Models
@model List<Islem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Test.cshtml";
}



<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>İşlem</th>
        <th>Süre</th>
        <th>Ücret</th>
        <th>Personellerimiz</th>
        <th>Randevu oluştur</th>
    </tr>

    @foreach (var x in Model)
    {

        <tr>
            <td>@x.ID</td>
            <td>@x.IslemAdi</td>
            <td>@x.Time</td>
            <td>@x.Price</td>
            <td>
                <!-- Button to navigate to employee list for the specific service -->
                <a href="/Man/PersonelDetay/@x.ID" class="btn btn-primary" style=" background-color:#dee61d">Detay</a>
            </td>
            <td>
                <!-- Button for creating an appointment -->
                <a href="/Man/RandevuAl/@x.ID" class="btn btn-success" style=" background-color:#dee61d">Randevu oluştur</a>
            </td>
        </tr>




    }
</table>
